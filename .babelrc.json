{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@assets/*": "./src/assets",
          "@components/*": "./src/components",
          "@constants/*": "./src/constants",
          "@contexts/*": "./src/contexts",
          "@hooks/*": "./src/hooks",
          "@pages/*": "./src/pages",
          "@utils/*": "./src/utils"
        }
      }
    ]
  ]
}
